<script type="text/javascript">
  var alcoholContent = "<%= @blood_alcohol_content %>";
</script>
  <script src="/Chart.js/Chart.js"></script>
  <script src="/js/bar.js"></script>

<div class="ui grid">
  <div class="one wide column">
  </div>
  <div class="six wide column">
      <h1 class="ui huge header">
      Your BAC: <%= @blood_alcohol_content %></h1>
      <h2 class="ui sub header">
        <% if @blood_alcohol_content < 0.08  %>
          <%= "below legal limit" %>
        <% else  %>
          <%= "above legal limit!" %>
        <% end %>
      </h2>
    <canvas id="myBar" width="300" height="600"></canvas>
    </div>
    <div class="ui nine wide column">
          <% if @blood_alcohol_content < 0.08  %>
            <div class="ui left aligned header">
               <img id="drink_n_drive" src="/imgs/dont_drink_and_drive.jpg"/>
            </div>
              <div style="font-size:30px" class="ui sub header">
                We recommend you take an Uber home!
              </div>
                <button id="massiveButton" href=" " class="massive ui center aligned button">
                    Massive
                </button>
          <% else  %>
            <%= "above legal limit!" %>
          <% end %>
    </div>
  </div>
</div>
