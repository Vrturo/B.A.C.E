<div class="ui inverted segment">
  <div class="ui inverted secondary pointing menu">
    <a href="/" id="bace_link" class="item">
      B.A.C.E.
    </a>
    <% if current_user %>
      <div id="welcome" class="item" style="color: white">
        Welcome <%= @user.first_name %>!
