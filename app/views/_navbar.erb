     </div>
     <div class="item">
        <a id="navUberSignUpLink" href="https://login.uber.com/oauth/authorize?response_type=code&client_id=9z6pxBTjyMZZHtdIOndfCfN1pnl_v8q7">
        Uber Sign In
      </a>
     </div>
    </a>
    <a id="navSignInLink" href="/users/sessions/new" class="item">
      Sign In
    </a>
    <a id="navSignUpLink" href="/users/new" class="item">
      Sign Up
    </a>
    <% else %>
    <a id="navLogOutLink" href="/users/sessions/logout" class="item">
      Log Out
    </a>
    <%end %>
    </div>
  </div>
</div>
